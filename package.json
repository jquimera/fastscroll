{
  "name": "fastscroll",
  "version": "1.7.1",
  "description": "Performant Custom Scroll Events",
  "main": "src/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build-debug": "browserify src/index.js -d --standalone FastScroll > dist/fastscroll.js",
    "build-min": "browserify src/index.js --standalone FastScroll | uglifyjs -c > dist/fastscroll.min.js",
    "dist": "npm run build-debug && npm run build-min",
    "start": "node ./node_modules/concurrently/src/main.js --kill-others \"watchify src/index.js -d --s FastScroll -o dist/fastscroll.js -v\" \"npm run server\"",
    "server": "browser-sync start --no-ghost-mode --server --directory --files 'demo/**/**, dist/*.js' --startPath demo/index.html"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/soenkekluth/fastscroll.git"
  },
  "keywords": [
    "scroll",
    "fast",
    "perfomance",
    "onScrollStop"
  ],
  "author": "SÃ¶nke Kluth <soenke.kluth@gmail.com> (http://soenkekluth.com/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/soenkekluth/fastscroll/issues"
  },
  "homepage": "https://github.com/soenkekluth/fastscroll#readme",
  "dependencies": {
    "delegatejs": "1.0.1",
    "eventdispatcher": "1.3.0"
  },
  "devDependencies": {
    "browser-sync": "2.11.1",
    "browserify": "13.0.0",
    "concurrently": "2.0.0",
    "uglify-js": "2.6.2",
    "watchify": "3.7.0"
  }
}
